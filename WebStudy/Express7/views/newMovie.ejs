<%-include ("partials/header") %>

<div class="container">
    <h2 style="text-align: center;">Adding New Movie</h2>
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/movieground" method="POST">
                <div class="form-group">
                    <label for="title">Movie Name: </label>
                    <input class="form-control" type="text" name="title" placeholder="movie name">
                </div>
                <div class="form-group">
                    <label class="control-label" for="image">Movie Image: </label>
                    <input class="form-control" type="text" name="image" placeholder="image URL">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add Movie!">
                </div>
        
            </form>
            <a href="/movieground">Go Back</a>
        </div>
    </div>
</div>
    
<%-include ("partials/footer") %>